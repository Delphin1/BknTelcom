<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent" android:layout_gravity="center">
        <TextView
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="XML file path"
                android:id="@+id/textView" android:layout_gravity="left|center_vertical"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="PeopleXML.xml"
                android:id="@+id/editText" android:layout_gravity="right|center_vertical" android:autoText="false"
                />
    </TableLayout>
</LinearLayout>